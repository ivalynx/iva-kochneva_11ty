---
layout: base.njk
---
<article class="websites-page">
    <h1>{{ page_title }}</h1>
    <p class="intro">{{ intro_text }}</p>
    
    <div class="portfolio-grid">
        {% for site in sites_list %}
        <div class="site-card">
            <h3>{{ site.name }}</h3>
            <p>{{ site.description }}</p>
            <a href="{{ site.url }}">{{ view_project_label }}</a>
        </div>
        {% endfor %}
    </div>
</article>