---
layout: base.njk
---

<section class="container__item section" id="advantages">
  <p>{{ advantages_before }}</p>
  <details class="details">
    <summary class="details__summary">
    {{ advantages_block.summary }}
    </summary>
    <dl class="details__info list-define">
      {% for entry in advantages_block.items %}
      <dt class="list-define__term">{{ entry.term }}</dt>
      <dd class="list-define__defines">{{ entry.definition }}</dd>
      {% endfor %}
    </dl>
  </details>
  <p>{{ advantages_after }}</p>
</section>



<article class="websites-page">
    <h1>{{ page_title }}</h1>
    <p class="intro">{{ intro_text }}</p>
    
    <div class="portfolio-grid">
        {% for site in sites_list %}
        <div class="site-card">
            <h3>{{ site.name }}</h3>
            <p>{{ site.description }}</p>
            <a href="{{ site.url }}">{{ view_project_label }}</a>
        </div>
        {% endfor %}
    </div>
</article>